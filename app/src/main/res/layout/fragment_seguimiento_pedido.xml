<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FAFAFA">

    <!-- Icono de estado -->
    <ImageView
        android:id="@+id/ivEstadoIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_check_circle"
        android:layout_marginTop="64dp"
        app:tint="#4CAF50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Texto del estado -->
    <TextView
        android:id="@+id/tvEstadoPedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estado actual: En preparaciÃ³n"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ivEstadoIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Mensaje descriptivo -->
    <TextView
        android:id="@+id/tvDescripcionEstado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tu pedido estÃ¡ siendo preparado. Te notificaremos cuando estÃ© listo ðŸ˜Š"
        android:textSize="16sp"
        android:textColor="#555"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvEstadoPedido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BotÃ³n Volver -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:cornerRadius="12dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcionEstado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>


