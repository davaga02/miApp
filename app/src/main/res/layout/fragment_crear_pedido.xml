<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FEF4F0">


    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="← Volver"
        android:backgroundTint="#E34A35"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/baloo"
        android:padding="8dp" />

    <!-- Barra de búsqueda -->
    <SearchView
        android:id="@+id/searchViewProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Buscar producto"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rounded_input" />

    <!-- Spinner de categorías -->
    <Spinner
        android:id="@+id/spinnerCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_spinner"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <!-- Lista de productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProductosPedido"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="12dp" />

    <!-- Spinner de mesas -->
    <Spinner
        android:id="@+id/spinnerMesas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_spinner"
        android:padding="12dp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: 0.00€"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#E34A35"
        android:gravity="end"
        android:layout_marginBottom="12dp" />

    <!-- Botón de confirmación -->
    <Button
        android:id="@+id/btnConfirmarPedido"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Confirmar pedido"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:backgroundTint="#E34A35"
        android:fontFamily="@font/baloo"
        app:cornerRadius="12dp" />

</LinearLayout>