<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FEF4F0">

    <!-- Botón volver -->
    <Button
        android:id="@+id/btnVolver"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:minWidth="120dp"
        android:text="← Volver"
        android:textSize="18sp"
        android:fontFamily="@font/baloo"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E34A35"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:layout_marginBottom="20dp"
        android:drawablePadding="8dp" />

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloCrear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo Pedido"
        android:textColor="#E34A35"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/baloo"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Buscar producto -->
    <SearchView
        android:id="@+id/searchViewProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="Buscar producto"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_input" />

    <!-- Categoría -->
    <Spinner
        android:id="@+id/spinnerCategorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_spinner"
        android:padding="16dp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <!-- Productos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerProductosPedido"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="16dp" />

    <!-- Selección de mesa -->
    <Spinner
        android:id="@+id/spinnerMesas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_spinner"
        android:padding="16dp"
        android:textAlignment="center"
        android:layout_marginBottom="16dp" />

    <!-- Total -->
    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: 0.00€"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#E34A35"
        android:gravity="end"
        android:layout_marginBottom="20dp" />

    <!-- Confirmar -->
    <Button
        android:id="@+id/btnConfirmarPedido"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Confirmar pedido"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#E34A35"
        android:fontFamily="@font/baloo"
        app:cornerRadius="16dp"
        android:layout_marginTop="8dp" />
</LinearLayout>
