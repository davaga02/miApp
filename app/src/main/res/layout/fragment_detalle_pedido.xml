<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layoutDetallePedido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF4F0"
    android:padding="16dp">

    <!-- Botón volver atrás -->
    <ImageButton
        android:id="@+id/btnVolver"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@null"
        android:src="@drawable/ic_arrow"
        android:contentDescription="Volver"
        app:tint="#E34A35"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Scroll principal -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/btnVolver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:backgroundTint="#F3B3CD">

            <!-- Título -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalle del Pedido"
                android:textColor="#E34A35"
                android:textSize="26sp"
                android:textStyle="bold"
                android:fontFamily="@font/baloo"
                android:layout_marginBottom="24dp" />

            <!-- Datos del pedido -->
            <TextView
                android:id="@+id/tvMesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mesa: "
                android:fontFamily="@font/baloo"
                android:textSize="18sp"
                android:textColor="#3E3E3E"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estado: "
                android:fontFamily="@font/baloo"
                android:textSize="18sp"
                android:textColor="#3E3E3E"
                android:layout_marginBottom="16dp" />

            <!-- Lista de productos -->
            <TextView
                android:id="@+id/tvProductos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Productos:"
                android:fontFamily="@font/baloo"
                android:textSize="16sp"
                android:textColor="#3E3E3E"
                android:background="@drawable/rounded_input"
                android:padding="16dp"
                android:layout_marginBottom="24dp" />

            <!-- Botón: En preparación -->
            <Button
                android:id="@+id/btnEstadoPreparacion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="En preparación"
                android:backgroundTint="#E34A35"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Botón: Completado -->
            <Button
                android:id="@+id/btnEstadoCompletado"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Completado"
                android:backgroundTint="#E34A35"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                android:layout_marginBottom="12dp" />

            <!-- Botón: Editar -->
            <Button
                android:id="@+id/btnEditarPedido"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Editar Pedido"
                android:backgroundTint="#F3B3CD"
                android:textColor="#E34A35"
                android:textSize="16sp"
                app:cornerRadius="12dp"
                android:layout_marginBottom="20dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>

