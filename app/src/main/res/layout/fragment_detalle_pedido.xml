<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF4F0"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Botón volver -->
        <Button
            android:id="@+id/btnVolver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Volver"
            android:textColor="#FFFFFF"
            android:backgroundTint="#E34A35"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvMesa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mesa 1"
            android:textColor="#E34A35"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estado: Pendiente"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#444"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha: 14 mayo 2025 - 13:30"
            android:textColor="#888"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvCreador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Realizado por: cliente@email.com"
            android:textColor="#666"
            android:layout_marginBottom="12dp" />

        <!-- Productos -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Productos:"
            android:textStyle="bold"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Helado chocolate x2 (tamaño: grande)"
            android:textColor="#444" />

        <!-- Total -->
        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total: 12.50€"
            android:textSize="17sp"
            android:textColor="#E34A35"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
