<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Fecha y hora -->
        <TextView
            android:id="@+id/tvFechaHora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 May 2025 - 16:30"
            android:textColor="#E34A35"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/baloo"
            android:layout_marginBottom="12dp" />

        <!-- Productos -->
        <TextView
            android:id="@+id/tvProductosCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Pizza x2 - Familiar - Jamón\n• Bebida x1 - Cola"
            android:textColor="#3E3E3E"
            android:textSize="17sp"
            android:fontFamily="@font/baloo"
            android:layout_marginBottom="12dp" />

        <!-- Total -->
        <TextView
            android:id="@+id/tvTotalCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: 23.50€"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:fontFamily="@font/baloo" />

        <!-- Estado -->
        <TextView
            android:id="@+id/tvEstadoCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estado: Pendiente"
            android:textColor="#E34A35"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/baloo"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
